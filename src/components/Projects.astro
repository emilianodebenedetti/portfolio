---
import HTML from './icons/HTML.astro';
import CSS from './icons/CSS.astro';
import JavaScript from './icons/JavaScript.astro';
import NodeJs from './icons/NodeJs.astro'
import ReactJs from './icons/ReactJs.astro'
import Tailwind from './icons/Tailwind.astro'
import Java from './icons/Java.astro'
import Firebase from './icons/Firebase.astro'
import GitHubIcon from './icons/GitHubIcon.astro';
import WatchPage from './icons/WatchPage.astro';


const TAGS = {
    HTML: {
        name: 'HTML',
        icon: HTML,
    },
    CSS: {
        name: 'CSS',
        icon: CSS,
    },
    JavaScript: {
        name: 'JavaScript',
        icon: JavaScript
    },
    NodeJs: {
        name: 'Node Js',
        icon: NodeJs
    },
    ReactJs: {
        name: 'React JS',
        icon: ReactJs
    },
    Tailwind: {
        name: 'Tailwind',
        icon: Tailwind 
    },
    Java: {
        name: 'Java',
        icon: Java
    },
    Firebase: {
        name: 'Firebase',
        icon: Firebase
    } 

}
const PROJECTS = [
    {
        title: 'E-Commerce DEMO',
        description: 'Tienda web creada con React Js, Tailwind y Firebase como base de datos y storage para las imágenes. La orden de compra se envía vía WhatsApp.',
        link: 'https://ecomercdemo.vercel.app/',
        github:'https://github.com/emilianodebenedetti/tienda-web',
        image: '/projectsimage/ecommerce.webp',
        tags: [TAGS.HTML, TAGS.CSS, TAGS.JavaScript, TAGS.ReactJs, TAGS.Firebase]
    },
    {
        title: 'E-Commerce CRUD',
        description: 'CRUD de articulos para E-Commerce DEMO, donde el administrador puede agregar, visualizar, editar y eliminar artículos.',
        link: 'https://e-commerce-crud.vercel.app/',
        github:'https://github.com/emilianodebenedetti/ECommerce-CRUD',
        image: '/projectsimage/ecommerceCRUD.webp',
        tags: [TAGS.HTML, TAGS.CSS, TAGS.JavaScript, TAGS.ReactJs, TAGS.Tailwind, TAGS.NodeJs, TAGS.Firebase]
    },
    {
        title: 'Weather App',
        description: 'App que permite consultar clima, filtrando por país y ciudad.',
        link: 'https://my-weather-app-sable.vercel.app/',
        github:'https://github.com/emilianodebenedetti/myWeatherApp',
        image: '/projectsimage/weatherapp.webp',
        tags: [TAGS.HTML, TAGS.CSS, TAGS.JavaScript, TAGS.ReactJs, TAGS.Tailwind]
    },
    {
        title: 'To do List',
        description: 'App para administrar tareas, podemos agregar, marcar como hechas y eliminar tareas.',
        link: 'https://to-do-list-phi-lime.vercel.app/',
        github:'https://github.com/emilianodebenedetti/to-do-list',
        image: '/projectsimage/todolist.webp',
        tags: [TAGS.HTML, TAGS.CSS, TAGS.JavaScript]
    }
]
---
<div class="flex flex-col gap-y-16">
    {
        PROJECTS.map(({ title, description, tags, image, link, github }) => (
            <article class="pt-4 md:pt-8 border border-white/20 rounded-xl shadow-xl hover-transition hover:shadow-white/30 ">
                <div class="px-4 md:px-8">
                    <div class="flex justify-between items-center mb-2 md:mb-4">
                        <h3 class="text-lg sm:text-2xl font-semibold text-grey-600 m-2">{title}</h3>
                        <div class="flex gap-1 md:gap-4">
                            <a href={github} target="_blank" class="flex items-center md:gap-1 px-4 py-2 text-sm text-white rounded-lg border border-white/20 hover:bg-teal-600/80 hover-transition hover:shadow-md hover:shadow-white/20 transition">
                                <GitHubIcon class="size-3 sm:size-5">
                            </a>
                            <a href={link} target="_blank" class="flex items-center md:gap-1 px-4 py-2 text-sm text-white rounded-lg border border-white/20 hover:bg-teal-600/80 hover-transition hover:shadow-md hover:shadow-white/20 transition">
                                <WatchPage class="size-3 sm:size-5">
                            </a>
                        </div>
                    </div>
                    <p class="text-sm md:text-lg mb-4 text-pretty text-white/80">{description}</p>
                    <ul class="flex flex-wrap gap-2 mb-4 mt-8">
                        {tags.map((tag) => (
                            <li>
                                <span class="flex items-center gap-x-2 rounded-full border border-white/10 text-white text-xs bg-white/5 transition hover:bg-white/10 py-1 px-2">
                                    <tag.icon class="size-3 md:size-5"/>
                                    {tag.name} 
                                </span>
                            </li>
                        ))}
                    </ul>
                </div>
                <img class="rounded-xl" src={image} alt={title}/>
            </article>
        ))
    }
<div/>